<% title "Ads" %>
<div class="middle">
	<div class="container_24">
		<!-- featured list -->
		<div class="divider_thin"></div>
		<!--content -->
		<div class="grid_15 suffix_1 content">
			<table class="zebra-striped">
				<tr>
					<th>Image</th>
					<th>Link</th>
				</tr>
				<% for ad in @ads %>
				<tr>
					<td><%= ad.image %></td>
					<td><%= ad.link %></td>
					<td><%= link_to "Show", ad , :class => "btn info" %></td>
					<td><%= link_to "Edit", edit_ad_path(ad)  , :class => "btn success" %></td>
					<td> <%= link_to "Destroy", ad_path(ad, :destroy => true),:confirm =>"Are you sure?", :method => :delete  , :class => "btn danger" %></td>
				</tr>
				<% end %>
			</table>
			<p>
				<%= link_to "New Ad", new_ad_path %>
			</p>
		</div>
		<!--/content -->
		<!-- sidebar-->
	
		<div class="clear"></div>
	</div>
</div>