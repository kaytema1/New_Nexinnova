  <%= f.error_messages %>
  <p>
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </p>
  <p>
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </p>
  <p>
    <%= f.label :page_id %><br />
    <%= f.number_field :page_id %>
  </p>
  <p><%= f.submit %></p>
<% end %>
